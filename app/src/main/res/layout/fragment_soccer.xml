<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoccerFragment">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/aliencrowdfast"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="56dp" />

    <ImageView
        android:id="@+id/ball_mid_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zballmidinanim"/>

    <ImageView
        android:id="@+id/ball_right_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zballrightinanim"/>

    <ImageView
        android:id="@+id/ball_left_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zballleftinanim"/>

    <ImageView
        android:id="@+id/blue_goalie_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zbluegoalrightanim"/>

    <ImageView
        android:id="@+id/blue_goalie_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zbluegoalleftanim"/>

    <ImageView
        android:id="@+id/ball_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zballrightanim"/>

    <ImageView
        android:id="@+id/ball_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zballleftanim"/>

    <ImageView
        android:id="@+id/ball_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/zballmidanim"/>

    <ImageView
        android:id="@+id/white_shooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/whiteshotanim" />

    <ImageView
        android:id="@+id/blue_shooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/blueshotanim" />

    <ImageView
        android:id="@+id/green_shooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/greenshotanim" />

    <ImageView
        android:id="@+id/red_shooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/redshotanim" />

    <ImageView
        android:id="@+id/yellow_shooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/yellowshotanim" />



</FrameLayout>